<Window x:Class="ProjectSECURE.Views.NewChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Chat"
        Height="450"
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="20">
        <!-- Layout: header and form -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Novo Chat"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource ForegroundBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Form for chat name and participants selection -->
        <StackPanel Grid.Row="1">

            <TextBlock Text="Nome do Chat"
                       Foreground="{DynamicResource ForegroundBrush}"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="ChatNameTextBox"
                     Height="30"
                     Padding="6"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Participantes"
                       Foreground="{DynamicResource ForegroundBrush}"
                       Margin="0,0,0,4"/>
            <ListBox x:Name="UsersListBox"
                     SelectionMode="Multiple"
                     Height="200"
                     Background="{DynamicResource BackgroundBrush}"
                     BorderBrush="{DynamicResource ForegroundBrush}"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Margin="0,0,0,10"/>

            <Button Content="Criar"
                    Click="CreateChat_Click"
                    Height="36"
                    FontWeight="Bold"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
