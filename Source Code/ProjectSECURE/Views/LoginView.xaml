<Window x:Class="ProjectSECURE.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:ProjectSECURE.Converters"
        Title="ProjectSECURE"
        Height="400"
        Width="350"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
        <Window.Resources>
                <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </Window.Resources>

        <Grid Margin="20">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="WireGuardStatusButton"
                        Grid.Row="0"
                        Content="WireGuard: Desconhecido"
                        HorizontalAlignment="Center"
                        Padding="6,3"
                        Click="WireGuardStatusButton_Click"
                        Background="{Binding IsWireGuardActive, Converter={StaticResource BoolToColorConverter}}"/>


                <!-- Cabeçalho -->
                <TextBlock Grid.Row="1"
                           Text="Bem-vindo!"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Formulário -->
                <StackPanel Grid.Row="2"
                            VerticalAlignment="Center">
                        <TextBlock Text="Nome de Utilizador"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="UsernameTextBox"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Padding="6"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="Senha"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Height="30"
                                     Padding="6"
                                     Margin="0,0,0,10"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>

                        <Button Content="Entrar"
                                Command="{Binding LoginCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Height="36"
                                Margin="0,10,0,0"/>

                        <Button Content="Criar Conta"
                                Command="{Binding RegisterCommand}"
                                Height="30"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Background="Transparent"
                                BorderThickness="0"
                                Margin="0,6,0,0"/>

                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="Red"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>

                </StackPanel>

                <TextBlock Grid.Row="3"
                           Text="ProjectSECURE© 2025 - M.Caeiro, P.Abade, R.Narciso"
                           FontSize="8"
                           FontWeight="Bold"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="5"
                           Margin="0"/>

        </Grid>
</Window>
