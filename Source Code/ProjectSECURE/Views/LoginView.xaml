<Window x:Class="ProjectSECURE.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:ProjectSECURE.Converters"
        Title="ProjectSECURE"
        Height="400"
        Width="350"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
        <!-- Converter for VPN status color -->
        <Window.Resources>
                <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </Window.Resources>

        <!-- Layout: VPN status, header, login form, copyright -->
        <Grid Margin="20">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- VPN status -->
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Login form -->
                        <RowDefinition Height="Auto"/>
                        <!-- Copyright -->
                </Grid.RowDefinitions>

                <!-- Button shows VPN status and color -->
                <Button x:Name="WireGuardStatusButton"
                        Grid.Row="0"
                        Content="WireGuard: Desconhecido"
                        HorizontalAlignment="Center"
                        Padding="6,3"
                        Click="WireGuardStatusButton_Click"
                        Background="{Binding IsWireGuardActive, Converter={StaticResource BoolToColorConverter}}"/>


                <!-- Header -->
                <TextBlock Grid.Row="1"
                           Text="Bem-vindo!"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Login form: username, password, login/register buttons, error message -->
                <StackPanel Grid.Row="2"
                            VerticalAlignment="Center">
                        <TextBlock Text="Nome de Utilizador"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="UsernameTextBox"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Padding="6"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="Senha"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Height="30"
                                     Padding="6"
                                     Margin="0,0,0,10"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>

                        <Button Content="Entrar"
                                Command="{Binding LoginCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Height="36"
                                Margin="0,10,0,0"/>

                        <Button Content="Criar Conta"
                                Command="{Binding RegisterCommand}"
                                Height="30"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Background="Transparent"
                                BorderThickness="0"
                                Margin="0,6,0,0">
                                <Button.Style>
                                        <Style TargetType="Button"
                                               BasedOn="{StaticResource {x:Type Button}}">
                                                <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsWireGuardActive}"
                                                                     Value="False">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                        </DataTrigger>
                                                </Style.Triggers>
                                        </Style>
                                </Button.Style>
                        </Button>

                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="Red"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>

                </StackPanel>

                <!-- Copyright -->
                <TextBlock Grid.Row="3"
                           Text="ProjectSECUREÂ© 2025 - M.Caeiro, P.Abade, R.Narciso"
                           FontSize="8"
                           FontWeight="Bold"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="5"
                           Margin="0"/>

        </Grid>
</Window>
