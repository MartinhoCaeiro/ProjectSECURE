<Window x:Class="ProjectSECURE.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProjectSECURE"
        Height="600"
        Width="400"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
    <Window.Resources>
        <Style x:Key="CustomScrollBar"
                TargetType="ScrollBar">
            <Setter Property="Width"
                    Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{DynamicResource ControlBackgroundBrush}">
                            <Track Name="PART_Track"
                                   IsDirectionReversed="true"
                                   Value="{TemplateBinding Value}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   ViewportSize="{TemplateBinding ViewportSize}">
                                <Track.Thumb>
                                    <Thumb Background="{DynamicResource ButtonBackgroundBrush}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Botão Voltar -->
        <Button Content="↩"
                Width="30"
                Height="30"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="BackButton_Click"/>

        <!-- Lista de mensagens -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Messages}"
                 Margin="10"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="{DynamicResource ForegroundBrush}"
                 Name="MessagesListBox"
                 Loaded="MessagesListBox_Loaded">
            <ListBox.Resources>
                <Style TargetType="ScrollBar"
                       BasedOn="{StaticResource CustomScrollBar}"/>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="{Binding IsSentByUser, Converter={StaticResource BoolToAlignmentConverter}}"
                                Margin="4">
                        <Border Background="{Binding IsSentByUser, Converter={StaticResource BoolToBubbleColorConverter}}"
                                CornerRadius="12"
                                Padding="10"
                                MaxWidth="240">
                            <TextBlock Text="{Binding Content}"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                        </Border>
                        <TextBlock Text="{Binding SenderName}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Margin="6,2,0,0"
                                   HorizontalAlignment="{Binding IsSentByUser, Converter={StaticResource BoolToAlignmentConverter}}"/>
                    </StackPanel>
                </DataTemplate>

            </ListBox.ItemTemplate>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding"
                            Value="0"/>
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Caixa de mensagem -->
        <DockPanel Grid.Row="2"
                   Margin="10">
            <DockPanel.Style>
                <Style TargetType="DockPanel">
                    <Setter Property="Visibility"
                            Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsWireGuardActive}"
                                     Value="False">
                            <Setter Property="Visibility"
                                    Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>
            <TextBox Width="260"
                     Height="36"
                     VerticalAlignment="Center"
                     Margin="0,0,10,0"
                     Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}"
                     Padding="8"/>
            <Button Content="Enviar"
                    Command="{Binding SendCommand}"
                    Height="36"
                    Width="80"/>
        </DockPanel>
    </Grid>
</Window>
