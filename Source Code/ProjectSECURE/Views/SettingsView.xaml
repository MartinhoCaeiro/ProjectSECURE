<Window x:Class="ProjectSECURE.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Definições"
        Height="250"
        Width="300"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
    <!-- Settings for theme selection -->
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Tema"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       Foreground="{DynamicResource ForegroundBrush}"/>

            <!-- ComboBox for selecting theme -->
            <ComboBox x:Name="ThemeComboBox"
                      SelectionChanged="ThemeChanged"
                      Height="30"
                      Width="150"
                      Background="{DynamicResource BackgroundBrush}"
                      Foreground="{DynamicResource ForegroundBrush}"
                      BorderBrush="{DynamicResource ForegroundBrush}">
                <ComboBoxItem Content="Claro"
                              Background="{DynamicResource BackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"/>
                <ComboBoxItem Content="Escuro"
                              Background="{DynamicResource BackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"/>
            </ComboBox>

        </StackPanel>
    </Grid>
</Window>
