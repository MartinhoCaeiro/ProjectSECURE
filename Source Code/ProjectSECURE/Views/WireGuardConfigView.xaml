<Window x:Class="ProjectSECURE.Views.WireGuardConfigView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuração WireGuard"
        Height="440"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Download Configuração WireGuard"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,16"
                   Grid.Row="0"/>

        <StackPanel Grid.Row="1"
                    Margin="0,0,0,16">
            <TextBlock Text="Guia rápido:"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            <TextBlock Text="1 - Insira o seu nome"
                       Margin="0,0,0,2"/>
            <TextBlock Text="2 - Escolha um local para guardar o ficheiro"
                       Margin="0,0,0,2"/>
            <TextBlock Text="3 - Instale e abra o Wireguard"
                       Margin="0,0,0,2"/>
            <TextBlock Text="4 - Adicione o ficheiro como um túnel"
                       Margin="0,0,0,2"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="0,0,0,8">
            <TextBlock Text="Nome: "
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            <TextBox x:Name="NameTextBox"
                     Width="140"
                     Height="28"
                     Margin="0,0,8,0"/>
        </StackPanel>

        <Button Content="Download"
                Width="120"
                Height="32"
                Grid.Row="4"
                HorizontalAlignment="Center"
                Click="DownloadButton_Click"/>
    </Grid>
</Window>
