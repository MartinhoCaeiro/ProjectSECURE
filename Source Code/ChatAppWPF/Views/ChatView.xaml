<Window x:Class="ChatAppWPF.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat"
        Height="600"
        Width="400"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Lista de mensagens -->
        <ListBox Grid.Row="0"
                 ItemsSource="{Binding Messages}"
                 Margin="10"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="{DynamicResource ForegroundBrush}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="{Binding IsSentByUser, Converter={StaticResource BoolToAlignmentConverter}}"
                                Margin="4">
                        <Border Background="{Binding IsSentByUser, Converter={StaticResource BoolToBubbleColorConverter}}"
                                CornerRadius="12"
                                Padding="10"
                                MaxWidth="240">
                            <TextBlock Text="{Binding Content}"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                        </Border>
                        <TextBlock Text="{Binding SenderName}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Margin="6,2,0,0"
                                   HorizontalAlignment="{Binding IsSentByUser, Converter={StaticResource BoolToAlignmentConverter}}"/>
                    </StackPanel>
                </DataTemplate>

            </ListBox.ItemTemplate>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding"
                            Value="0"/>
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Caixa de mensagem -->
        <DockPanel Grid.Row="1"
                   Margin="10">
            <TextBox Width="260"
                     Height="36"
                     VerticalAlignment="Center"
                     Margin="0,0,10,0"
                     Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}"
                     Padding="8"/>
            <Button Content="Enviar"
                    Command="{Binding SendCommand}"
                    Height="36"
                    Width="80"/>
        </DockPanel>
    </Grid>
</Window>
