<Window x:Class="ChatAppWPF.Views.NewChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Chat"
        Height="350"
        Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nome do Chat:"/>
            <TextBox x:Name="ChatNameTextBox"
                     Margin="0,5,0,10"/>
            <TextBlock Text="Selecionar Participantes:"/>
            <ListBox x:Name="UsersListBox"
                     SelectionMode="Multiple"
                     Height="200"/>
            <Button Content="Criar"
                    Click="CreateChat_Click"
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
